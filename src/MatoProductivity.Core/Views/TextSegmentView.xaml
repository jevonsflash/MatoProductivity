<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatoProductivity.Core.Views.TextSegmentView">
    <VerticalStackLayout>
        <Label Text="{Binding NoteSegment.Title}"></Label>
        <Editor Text="{Binding Content}"
                Placeholder="{Binding PlaceHolder}"></Editor>
    </VerticalStackLayout>
</ContentView>
