<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatoProductivity.Core.Views.DateTimeSegmentView">
    <VerticalStackLayout>
        <Label Text="{Binding NoteSegment.Title}"></Label>
        <DatePicker Date="{Binding DefaultTime}"></DatePicker>
        <DatePicker Date="{Binding Time}"></DatePicker>
        <Switch IsToggled="{Binding IsAutoSet, Mode=TwoWay}"></Switch>
    </VerticalStackLayout>
</ContentView>
