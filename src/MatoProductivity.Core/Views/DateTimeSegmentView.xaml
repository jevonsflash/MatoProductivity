<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:MatoProductivity.Core.Services;assembly=MatoProductivity.Core"
             x:Class="MatoProductivity.Core.Views.DateTimeSegmentView">
    <Grid>
        <VerticalStackLayout IsVisible="{Binding NoteSegmentState, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static core:NoteSegmentState.PreView}}">
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Title}"></Span>
                        <Span Text="{Binding Time,Converter={StaticResource DateTimeToStringConverter}}"></Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>

        <VerticalStackLayout IsVisible="{Binding NoteSegmentState, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static core:NoteSegmentState.Edit}}">
            <Label Text="{Binding Title}"></Label>
            <DatePicker Date="{Binding Time}"
                        IsVisible="{Binding IsAutoSet, Converter={StaticResource True2FalseConverter}}"></DatePicker>
        </VerticalStackLayout>

        <VerticalStackLayout IsVisible="{Binding NoteSegmentState, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static core:NoteSegmentState.Config}}">
            <Entry  Text="{Binding Title}"
                    Placeholder="请输入标题" />
            <DatePicker Date="{Binding Time}"
                        IsEnabled="{Binding IsAutoSet, Converter={StaticResource True2FalseConverter}}"></DatePicker>
            <Switch IsToggled="{Binding IsAutoSet, Mode=TwoWay}"></Switch>
        </VerticalStackLayout>
    </Grid>
</ContentView>
