<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:styles="clr-namespace:MatoProductivity.Styles"
                    x:Class="MatoProductivity.Styles.Theme">
    <ResourceDictionary.MergedDictionaries>
        <styles:Colors></styles:Colors>
        <styles:Fonts></styles:Fonts>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="ContentView"
           ApplyToDerivedTypes="True">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource LightCardBorderColor}, Dark={StaticResource DarkCardBorderColor}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Grid"
           ApplyToDerivedTypes="True">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource LightCardBorderColor}, Dark={StaticResource DarkCardBorderColor}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!--#region Labels-->

    <Style x:Key="Headline2_FontAwesome"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="FontAwesome_Solid" />
        <Setter Property="FontSize"
                Value="{StaticResource Headline2FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>

    <Style x:Key="Headline4_MulishRegular"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="FontSize"
                Value="{StaticResource Headline4FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>
    <Style x:Key="Headline4_MulishBold"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Bold" />
        <Setter Property="FontSize"
                Value="{StaticResource Headline4FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>
    <Style x:Key="Headline4_MulishBlack"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Black" />
        <Setter Property="FontSize"
                Value="{StaticResource Headline4FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>

    <Style x:Key="Subtitle1_MulishRegular"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="FontSize"
                Value="{StaticResource Subtitle1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Subtitle1_MulishBold"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Bold" />
        <Setter Property="FontSize"
                Value="{StaticResource Subtitle1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Subtitle1_MulishBlack"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Black" />
        <Setter Property="FontSize"
                Value="{StaticResource Subtitle1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Subtitle1_MulishExtraBold"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_ExtraBold" />
        <Setter Property="FontSize"
                Value="{StaticResource Subtitle1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>

    <Style x:Key="Body1_MulishRegular"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="FontSize"
                Value="{StaticResource Body1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Body1_MulishSemiBold"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="FontSize"
                Value="{StaticResource Body1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Body1_MulishBold"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Bold" />
        <Setter Property="FontSize"
                Value="{StaticResource Body1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>
    <Style x:Key="Body1_MulishBlack"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Black" />
        <Setter Property="FontSize"
                Value="{StaticResource Body1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>

    <Style x:Key="Body2_MulishRegular"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="FontSize"
                Value="{StaticResource Body2FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Links-->

    <Style x:Key="Base_Link"
           TargetType="Label">
        <Setter Property="FontFamily"
                Value="Mulish_Bold" />
        <Setter Property="TextDecorations"
                Value="Underline" />
        <Setter Property="FontSize"
                Value="{StaticResource Body1FontSize}" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Frames-->

    <Style TargetType="Border">
        <Setter Property="StrokeShape"
                Value="RoundRectangle 5" />
        <Setter Property="Stroke"
                Value="{AppThemeBinding Light={StaticResource LightCardBackgroundColor}, Dark={StaticResource DarkCardBackgroundColor}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource LightCardBackgroundColor}, Dark={StaticResource DarkCardBackgroundColor}}" />


    </Style>

    <Style x:Key="Base_FrameEntry"
           TargetType="Border">
        <Setter Property="StrokeShape"
                Value="RoundRectangle 10" />
        <Setter Property="Margin"
                Value="0,0,0,5" />
        <Setter Property="Padding"
                Value="10, 0" />
        <Setter Property="Stroke"
                Value="{AppThemeBinding Light={StaticResource LightEntryBorderColor}, Dark={StaticResource DarkEntryBorderColor}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource LightEntryBackgroundColor}, Dark={StaticResource DarkEntryBackgroundColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Entry-->

    <Style x:Key="Base_Entry"
           TargetType="Entry">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource LightPlaceholderTextColor}, Dark={StaticResource DarkPlaceholderTextColor}}" />
    </Style>

    <Style x:Key="Error_Entry"
           TargetType="Entry">
        <Setter Property="FontFamily"
                Value="Mulish_Bold" />
        <Setter Property="TextColor"
                Value="{StaticResource FailColor}" />
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource LightPlaceholderTextColor}, Dark={StaticResource DarkPlaceholderTextColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Picker-->

    <Style x:Key="Base_Picker"
           TargetType="Picker">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Date Picker-->

    <Style x:Key="Base_DatePicker"
           TargetType="DatePicker">
        <Setter Property="FontFamily"
                Value="Mulish_Regular" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    </Style>

    <!--#endregion-->

    <!--#region Buttons-->

    <Style x:Key="Base_Button"
           TargetType="Button">
        <Setter Property="CornerRadius"
                Value="30" />
        <Setter Property="FontFamily"
                Value="Mulish_ExtraBold" />
        <Setter Property="Padding"
                Value="20" />
        <Setter Property="BorderWidth"
                Value="0" />
        <Setter Property="FontSize"
                Value="{StaticResource ButtonFontSize}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource LightButtonColor}, Dark={StaticResource DarkButtonColor}}" />
                            <Setter Property="TextColor"
                                    Value="{AppThemeBinding Light={StaticResource LightButtonTextColor}, Dark={StaticResource DarkButtonTextColor}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource LightCardDisabledBackgroundColor}, Dark={StaticResource DarkCardDisabledBackgroundColor}}" />
                            <Setter Property="TextColor"
                                    Value="{AppThemeBinding Light={StaticResource LightDisabledTextColor}, Dark={StaticResource DarkDisabledTextColor}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale"
                                    Value="0.8" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    <Style TargetType="Button"
           BasedOn="{StaticResource Base_Button}"
           x:Key="Text_Button">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                            <Setter Property="TextColor"
                                    Value="{StaticResource AccentColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                            <Setter Property="TextColor"
                                    Value="{AppThemeBinding Light={StaticResource LightDisabledTextColor}, Dark={StaticResource DarkDisabledTextColor}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>

    </Style>
    <!--#endregion-->

    <!--#region ActivityIndicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color"
                Value="{StaticResource AccentColor}">
        </Setter>
        <Setter Property="HeightRequest"
                Value="60">
        </Setter>
        <Setter Property="WidthRequest"
                Value="60">
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>