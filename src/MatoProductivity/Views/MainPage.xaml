<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatoProductivity.MainPage">
    <Shell.SearchHandler>
        <SearchHandler Placeholder="Enter search term"
                                      ShowsResults="true"
                                      DisplayMemberName="Name" />
    </Shell.SearchHandler>
    <TabBar>
        <Tab  Title="场景"
              Icon="tab_note_template">
            <ShellContent  x:Name="NoteTemplateContent"
                           Route="NoteTemplate"/>
        </Tab>
        <Tab  Title="笔记"
              Icon="tab_note"  >
            <ShellContent x:Name="NoteContent"
                          Route="Note"/>
        </Tab>
        <Tab  Title="统计"
              Icon="tab_statistics">
            <ShellContent x:Name="StatisticContent"
                          Route="Statistic" />
        </Tab>
        <Tab  Title="我的"
              Icon="tab_user">
            <ShellContent x:Name="UserProfileContent"
                          Route="UserProfile" />
        </Tab>
    </TabBar>
</Shell>
